@{
    if (this.User.IsInRole("DrinkConsumer"))
    {
        Layout = "~/Views/Shared/_LayoutDrinkConsumer.cshtml";
    }
    else if (this.User.IsInRole("BarOwner"))
    {
        Layout = "~/Views/Shared/_LayoutBarOwner.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}