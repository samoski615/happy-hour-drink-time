        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DayOfTheWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfdrink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainTypeOfAlcohol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrinkPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeHappyHourStarts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeHappyHourEnds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
