@model IEnumerable<HappyHourTracker.Models.DrinkSpecial>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DayOfTheWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfdrink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainTypeOfAlcohol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrinkPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeHappyHourStarts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeHappyHourEnds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationId)
            </th>
            <th></th>
        </tr>
